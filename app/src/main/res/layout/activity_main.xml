<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/itLastName" android:visibility="visible">
    <EditText
            android:layout_width="407dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Enter username/email"
            android:ems="10"
            android:id="@+id/itUsernme" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:hint="Enter username/email"/>
    <EditText
            android:layout_width="416dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/itpassword"
            android:hint="Enter password" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/itUsernme" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <Button
            android:text="Log in"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/itpassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <EditText
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Forgot pasword ?"
            android:ems="10"
            android:id="@+id/tvForgotpassword" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:hint="Forgot password?"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Register Here"
            android:ems="10"
            android:id="@+id/tvregisterhere"
            android:hint="Register Here" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            app:layout_constraintStart_toEndOf="@+id/tvForgotpassword" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
</android.support.constraint.ConstraintLayout>